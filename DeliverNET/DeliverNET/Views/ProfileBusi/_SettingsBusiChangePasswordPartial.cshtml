@model DeliverNET.Models.ProfileBusiViewModels.SettingsBusiChangePasswordViewModel

<!-- Change Password Menu -->
<div id="menuSett" class="bg-jet-3d text-bone mt-5 p-5 settings-menu position-absolute w-75 invisible" style="height:80%">
    <h3>Change Password</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" class="text-my-dark" style="width:90%">

        <label asp-for="OldPassword"><strong>Enter old password</strong></label>
        <input asp-for="OldPassword" class="form-control mb-3" />
        <span asp-validation-for="OldPassword" class="text-danger"></span> <!-- TODO: Insert wrong text shit -->

        <label asp-for="NewPassword"><strong>Enter new password</strong></label>
        <input asp-for="NewPassword" class="form-control mb-3" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>

        <label asp-for="VerifyNewPassword"><strong>Confirm new password</strong></label>
        <input asp-for="VerifyNewPassword" class="form-control mb-3" />
        <span asp-validation-for="VerifyNewPassword" class="text-danger"></span>

        <button type="submit" asp-controller="ProfileBusi" asp-action="SettingsChangePassword" class="btn btn-my-dark mx-auto d-block">Apply</button>
    </form>
</div>
